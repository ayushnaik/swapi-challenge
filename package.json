{
  "name": "swapi-challenge",
  "description": "Application to demonstrate a solution for the given problem.",
  "author": "Ayush Naik",
  "version": "1.0.0",
  "scripts": {
    "build": "node build.js",
    "lint": "tslint --project \"tsconfig.json\"",
    "start": "node -r module-alias/register ./dist --env=production",
    "start:dev": "nodemon",
    "test": "mocha --require ts-node/register --require tsconfig-paths/register 'tests/**/*.test.ts'"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, html",
    "ignore": [
      "src/public"
    ],
    "exec": "ts-node -r tsconfig-paths/register ./src"
  },
  "_moduleAliases": {
    "@src": "dist",
    "@resources": "dist/resources",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@server": "dist/Server"
  },
  "dependencies": {
    "ansi-colors": "^4.1.3",
    "apicache": "^1.6.3",
    "app-root-path": "^3.1.0",
    "axios": "^1.6.2",
    "cls-hooked": "^4.2.2",
    "command-line-args": "^5.2.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^7.1.5",
    "fs": "^0.0.2",
    "helmet": "^7.1.0",
    "http": "^0.0.1-security",
    "http-status": "^1.7.3",
    "module-alias": "^2.2.3",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "path": "^0.12.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/apicache": "^1.6.6",
    "@types/chai": "^4.3.11",
    "@types/cls-hooked": "^4.3.8",
    "@types/command-line-args": "^5.2.3",
    "@types/cookie-parser": "^1.4.6",
    "@types/express": "^4.17.21",
    "@types/find": "^0.2.4",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^29.5.11",
    "@types/jsonfile": "^6.1.4",
    "@types/mocha": "^10.0.6",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/uuid": "^9.0.7",
    "chai": "^4.3.10",
    "find": "^0.3.0",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jsonfile": "^6.1.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "sequelize-cli": "^6.6.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.6.2",
    "tslint": "^6.1.3",
    "typescript": "^5.3.3"
  }
}
